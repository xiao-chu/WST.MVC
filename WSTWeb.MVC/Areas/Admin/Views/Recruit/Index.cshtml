        <div class="layui-body">
            <div style="padding: 15px;">
                <!--查询违纪人-->
                <div class="layui-form-item">
                    <div class="layui-inline">
                        <div class="layui-input-inline">
                            <input type="tel" id="Rposition2" name="Rposition" autocomplete="off" placeholder="请输入职位" class="layui-input">
                        </div>
                    </div>
                    <button type="button" class="layui-btn" id="btn-cha">🔍查询</button>
                    <button type="button" id="chongzhi" class="layui-btn">🔄重置</button>
                    <button type="button" id="btnadd" class="layui-btn">➕添加</button>
                </div>

                <table id="demo" lay-filter="test">
                </table>
                <!--增删改按钮-->
                <script type="text/html" id="barDemo">
                    <a class="layui-btn layui-btn-warm layui-btn-xs" id="chakan" lay-event="detail">查看</a>
                    <a class="layui-btn layui-btn-xs" id="btnadd" lay-event="edit">修改</a>
                    <a class="layui-btn layui-btn-danger layui-btn-xs" lay-event="del">删除</a>
                </script>
            </div>
            <!--弹窗添加/修改-->
            <form class="layui-form" id="formgai" action="" style="display:none;text-align:center">
                <input type="hidden" id="Rid" name="Rid" value="0" />
                <div class="layui-form-item">
                    <label class="layui-form-label">种类</label>
                    <div class="layui-input-inline">
                        <input type="radio" id="Rkind1" class="Rkind" name="Rkind" value="社会招聘" title="社会招聘">
                        <input type="radio" id="Rkind2" class="Rkind" name="Rkind" value="毕业生招聘" title="毕业生招聘">
                        <input type="radio" id="Rkind3" class="Rkind" name="Rkind" value="实习生招聘" title="实习生招聘">
                    </div>
                </div>

                <div class="layui-form-item">
                    <label class="layui-form-label">职位</label>
                    <div class="layui-input-inline">
                        <input type="text" id="Rposition" name="Rposition" lay-verify="title" autocomplete="off" placeholder="请输入职位" class="layui-input">
                    </div>
                </div>

                <div class="layui-form-item layui-form-text">
                    <label class="layui-form-label">职位描述</label>
                    <div class="layui-input-block">
                        <textarea id="Rdescribe" name="Rdescribe" placeholder="请输入职位描述" class="layui-textarea"></textarea>
                    </div>
                </div>
                
                <div class="layui-form-item">
                    <label class="layui-form-label">详细地址</label>
                    <div class="layui-input-inline">
                        <input type="text" id="Raddress" name="Raddress" lay-verify="title" autocomplete="off" placeholder="请输入地址" class="layui-input">
                    </div>
                </div>
                <div class="layui-form-item">
                    <label class="layui-form-label">公司</label>
                    <div class="layui-input-inline">
                        <input type="text" id="Rcompany" name="Rcompany" lay-verify="title" autocomplete="off" placeholder="请输入公司" class="layui-input">
                    </div>
                </div>

                <div class="layui-form-item">
                    <label class="layui-form-label">状态</label>
                    <div class="layui-input-inline">
                        <input type="radio" id="Rstate1" class="Rstate" name="Rstate" value="1" title="启用">
                        <input type="radio" id="Rstate2" class="Rstate" name="Rstate" value="0" title="禁用">
                    </div>
                </div>
            </form>
        </div>

    </div>
    <script src="~/layui/layui.js"></script>
    <script src="~/js/jquery-3.3.1.js"></script>
    <script>
        //JavaScript代码区域
        layui.use(['laydate', 'laypage', 'layer', 'table', 'carousel', 'upload','form', 'element', 'slider'], function () {
            var laydate = layui.laydate //日期
                , laypage = layui.laypage //分页
                , form = layui.form
                , layer = layui.layer //弹层
                , table = layui.table //表格
                , carousel = layui.carousel //轮播
                , upload = layui.upload //上传
                , element = layui.element //元素操作
                , slider = layui.slider //滑块
                , $=layui.$
            //执行一个 table 实例
            table.render({
                elem: '#demo'
                , height: 420
                , url: 'http://localhost:53305/api/Recruit' //数据接口
                , method: 'get'
                , cols: [[ //表头
                    { field: 'rid', title: '序号', width: 80, fixed: 'left' }
                    , { field: 'rkind', title: '种类', width: 120 }
                    , { field: 'rposition', title: '职位', width: 100 }
                    , { field: 'rdescribe', title: '描述', width: 150 }
                    , { field: 'raddress', title: '详细地址', width: 80 }
                    , { field: 'rcompany', title: '公司', width: 100 }
                    , {
                        field: 'rstate', title: '状态', width: 100,
                        templet: function (d) {
                            if (d.rstate == 1) {
                                return '启用'
                            }
                            else {
                                return '禁用'
                            }
                        }
                    }
                    , {
                        field: 'rtime', title: '发布时间', width: 150,
                        templet: function (d) {
                            return (d.rtime.substring(0, 10) + ' ' + d.rtime.substring(11, 19));
                        }
                    }
                    , { field: 'rpeople', title: '处理人', width: 100}
                    , { fixed: 'right', title: '操作', width: 165, align: 'left', toolbar: '#barDemo' }
                ]]
            });

            //重置
            $('#chongzhi').on('click', function () {
                $('#Rposition2').val('');
                table.reload('demo', {
                    where: { //设定异步数据接口的额外参数，任意设
                        Rposition: ""
                    }
                    , page: {
                        curr: 1 //重新从第 1 页开始
                    }
                }); //只重载数据
            });

            //查询
            $('#btn-cha').on('click', function () {
                var Rposition = $('#Rposition2').val();
                table.reload('demo', {
                    where: { //设定异步数据接口的额外参数，任意设
                        Rposition: Rposition
                    }
                    , page: {
                        curr: 1 //重新从第 1 页开始
                    }
                }); //只重载数据
            });

            //监听头工具栏事件
            table.on('toolbar(test)', function (obj) {
                var checkStatus = table.checkStatus(obj.config.id)
                    , data = checkStatus.data; //获取选中的数据
                switch (obj.event) {
                    case 'add':
                        layer.msg('添加');
                        break;
                    case 'update':
                        if (data.length === 0) {
                            layer.msg('请选择一行');
                        } else if (data.length > 1) {
                            layer.msg('只能同时编辑一个');
                        } else {
                            layer.alert('编辑 [id]：' + checkStatus.data[0].id);
                        }
                        break;
                    case 'delete':
                        if (data.length === 0) {
                            layer.msg('请选择一行');
                        } else {
                            layer.msg('删除');
                        }
                        break;
                };
            });



            //弹出框添加/修改
            $('#btnadd').on('click', function () {
                layer.open({
                    title: '添加招聘信息'
                    , content: $('#formgai')
                    , type: 1
                    , area: ['900px', '500px']
                    , shade: 0
                    , anim: 6
                    , closeBtn: 1
                    , btn: ['保存', '关闭']
                    , btnAlign: 'c'
                    , success: function (index, layero) {//清空表单元素
                        $("#formgai")[0].reset();
                        layui.form.render();
                    }
                    , yes: function (index, layero) {
                        $.ajax({
                            url: 'http://localhost:53305/api/Recruit',
                            type: 'post',
                            data: JSON.stringify({
                                rkind: $('.Rkind:checked').val(),
                                rposition: $('#Rposition').val(),
                                rdescribe: $('#Rdescribe').val(),
                                raddress: $('#Raddress').val(),
                                rcompany: $('#Rcompany').val(),
                                rstate: $('.Rstate:checked').val()
                            }),
                            success: function (d) {
                                if (d > 0) {
                                    layer.closeAll();
                                    table.reload('demo', {
                                        where: { //设定异步数据接口的额外参数，任意设
                                        }
                                        , page: {
                                            curr: 1 //重新从第 1 页开始
                                        }
                                    }); //只重载数据
                                    alert('添加成功');
                                }
                                else {
                                    alert('添加失败');
                                }
                            },
                            dataType: "json",
                            contentType: "application/json"
                        });
                    }
                    , btn2: function (index, layero) {
                        //按钮【按钮二】的回调
                        layer.closeAll(); //疯狂模式，关闭所有层
                        //return false 开启该代码可禁止点击该按钮关闭
                    }
                });
            });

            //监听头工具栏事件
            table.on('toolbar(test)', function (obj) {
                var checkStatus = table.checkStatus(obj.config.id)
                    , data = checkStatus.data; //获取选中的数据
                switch (obj.event) {
                    case 'add':
                        layer.msg('添加');
                        break;
                    case 'update':
                        if (data.length === 0) {
                            layer.msg('请选择一行');
                        } else if (data.length > 1) {
                            layer.msg('只能同时编辑一个');
                        } else {
                            layer.alert('编辑 [id]：' + checkStatus.data[0].id);
                        }
                        break;
                    case 'delete':
                        if (data.length === 0) {
                            layer.msg('请选择一行');
                        } else {
                            layer.msg('删除');
                        }
                        break;
                };
            });

            //监听行工具事件
            table.on('tool(test)', function (obj) { //注：tool 是工具条事件名，test 是 table 原始容器的属性 lay-filter="对应的值"
                var data = obj.data //获得当前行数据
                    , layEvent = obj.event; //获得 lay-event 对应的值

                //查看
                if (layEvent === 'detail') {

                } else if (layEvent === 'del') {
                    layer.confirm('真的删除行么', function (index) {
                        $.ajax({
                            url: 'http://localhost:53305/api/Recruit',
                            type: 'delete',
                            data: '"'+data.rid+'"',
                            success: function (d) {
                                if (d > 0) {
                                    layer.closeAll();
                                    alert('删除成功');              
                                    table.reload('demo', {
                                        where: { //设定异步数据接口的额外参数，任意设
                                        }
                                        , page: {
                                            curr: 1 //重新从第 1 页开始
                                        }
                                    }); //只重载数据
                                }
                                else {
                                    alert('删除失败');
                                }
                            },
                            //dataType: "json",
                            contentType: "application/json"
                        });
                    });
                } else if (layEvent === 'edit') {
                    //修改提交
                    layer.open({
                        title: '修改举报投诉'
                        , content: $('#formgai')
                        , type: 1
                        , area: ['900px', '500px']
                        , shade: 0
                        , anim: 6
                        , closeBtn: 1
                        , success: function () {
                            $('#Rid').val(data.rid);
                            if (data.rkind=='社会招聘') {
                                $('#Rkind1').prop('checked', true);
                            }
                            else if (data.rkind == '毕业生招聘') {
                                $('#Rkind2').prop('checked', true);
                            }
                            else if (data.rkind == '实习生招聘') {
                                $('#Rkind3').prop('checked', true);
                            }
                            $('#Rposition').val(data.rposition);
                            $('#Rdescribe').val(data.rdescribe);
                            $('#Raddress').val(data.raddress);
                            $('#Rcompany').val(data.rcompany);
                            if (data.rstate == 1) {
                                $('#Rstate1').prop('checked', true);
                            }
                            else if (data.rstate == 0) {
                                $('#Rstate2').prop('checked', true);
                            }
                            form.render();
                        }
                        , btn: ['保存', '关闭']
                        , btnAlign: 'c'
                        , yes: function (index, layero) {
                            $.ajax({
                                url: 'http://localhost:53305/api/Recruit',
                                type: 'put',
                                data: JSON.stringify({
                                    rid: $('#Rid').val(),
                                    rkind: $('.Rkind:checked').val(),
                                    rposition: $('#Rposition').val(),
                                    rdescribe: $('#Rdescribe').val(),
                                    raddress: $('#Raddress').val(),
                                    rcompany: $('#Rcompany').val(),
                                    rstate: $('.Rstate:checked').val(),
                                }),
                                //data: JSON.stringify(data.field),
                                success: function (d) {
                                    if (d > 0) {
                                        layer.closeAll();
                                        table.reload('demo', {
                                            where: { //设定异步数据接口的额外参数，任意设
                                            }
                                            , page: {
                                                curr: 1 //重新从第 1 页开始
                                            }
                                        }); //只重载数据
                                        alert('修改成功');
                                    }
                                    else {
                                        alert('修改失败');
                                    }
                                },
                                dataType: "json",
                                contentType: "application/json"
                            });
                        }
                        , btn2: function (index, layero) {
                            //按钮【按钮二】的回调
                            layer.closeAll(); //疯狂模式，关闭所有层
                            //return false 开启该代码可禁止点击该按钮关闭
                        }
                    });
                }
            });
        });
    </script>
</body>
</html>