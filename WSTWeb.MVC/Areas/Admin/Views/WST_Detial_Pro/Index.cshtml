        <div class="layui-body">
            <div class="layui-form" style="margin-left:15px;margin-top:15px">
                <div class="layui-inline">
                    <input class="layui-input" name="dtitle" id="demoReload" autocomplete="off" placeholder="请输入名称">
                </div>
                <div class="layui-inline">
                    <select name="interest" lay-filter="aihao" id="demoParent">
                        <option value="" selected="">--请选择--</option>
                        <option value="跟栏目">跟栏目</option>
                        <option value="审计">审计</option>
                        <option value="服务类型">服务类型</option>
                        <option value="咨询">咨询</option>
                    </select>
                </div>
                <button class="layui-btn layui-btn-primary" id="Search"><i class="layui-icon">&#xe615;</i>查询</button>
                <button class="layui-btn layui-btn-primary" id="Reset"><i class="layui-icon">&#xe9aa;</i>重置</button>
                <button class="layui-btn layui-btn-primary" id="NewAdd"><i class="layui-icon">&#xe654;</i>新增</button>
            </div>
            <div style="padding: 15px;">
                <table class="layui-hide" lay-filter="test" id="test"></table>
            </div>
        </div>

        <!--行操作-->
        <script type="text/html" id="barDemo">
            <a class="layui-btn layui-btn-xs" lay-event="edit">编辑</a>
            <a class="layui-btn layui-btn-danger layui-btn-xs" lay-event="del">删除</a>
        </script>

        <!--弹窗添加-->
        <form class="layui-form" id="formadd" action="" style="display:none">

            <input type="hidden" id="Did" name="Did">

            <div class="layui-inline">
                <div class="layui-form-item" style="margin-top:40px">

                    <label class="layui-form-label">名称</label>
                    <div class="layui-input-inline">
                        <input type="text" id="Dtitle" name="Dtitle" lay-verify="required" autocomplete="off" placeholder="名称" class="layui-input">
                    </div>
                </div>

                <div class="layui-form-item">
                    <label class="layui-form-label">父栏目</label>
                    <div class="layui-input-inline">
                        <input type="text" id="Dptitle" name="Dptitle" lay-verify="required" lay-reqtext="必填项，岂能为空？" placeholder="父栏目" autocomplete="off" class="layui-input">
                    </div>
                </div>
            </div>

            <div class="layui-inline">
                <div class="layui-form-item">
                    <label class="layui-form-label">UrlKey</label>
                    <div class="layui-input-inline">
                        <input type="text" id="Urlkey" name="Urlkey" lay-verify="title" autocomplete="off" placeholder="UrlKey" class="layui-input">
                    </div>
                </div>

                <div class="layui-form-item">
                    <label class="layui-form-label">排序</label>
                    <div class="layui-input-inline">
                        <input type="text" id="Dsort" name="Dsort" lay-verify="required" autocomplete="off" placeholder="序号" class="layui-input">
                    </div>
                </div>
            </div>

            <div class="layui-inline">
                <div class="layui-form-item">
                    <label class="layui-form-label">状态</label>
                    <div class="layui-input-inline">
                        <input type="radio" id="Dstate1" name="Dstate" value="0" title="显示" checked="">
                        <input type="radio" id="Dstate2" name="Dstate" value="1" title="隐藏">
                    </div>
                </div>

                <div class="layui-form-item">
                    <label class="layui-form-label">类型</label>
                    <div class="layui-input-inline">
                        <input type="text" id="Dtype" name="Dtype" lay-verify="title" autocomplete="off" placeholder="类型" class="layui-input">
                    </div>
                </div>
            </div>

            <div class="layui-inline">
                <div class="layui-form-item">
                    <label class="layui-form-label">地址</label>
                    <div class="layui-input-inline">
                        <input class="layui-textarea" type="text" id="Daddress" name="Daddress" lay-verify="title" autocomplete="off" placeholder="地址">
                    </div>
                </div>

                <div class="layui-form-item">
                    <label class="layui-form-label">说明</label>
                    <div class="layui-input-inline">
                        <input class="layui-textarea" type="text" id="Dexplain" name="Dexplain" lay-verify="title" autocomplete="off" placeholder="说明">
                    </div>
                </div>

            </div>

        </form>

    </div>

    <script src="~/layui/layui.js"></script>

    <script src="~/js/jquery-3.3.1.js"></script>
    <script>
        //JavaScript代码区域

        layui.use(['laydate', 'laypage', 'layer', 'table', 'carousel', 'upload', 'element', 'slider', 'form'], function () {
            var laydate = layui.laydate //日期
                , laypage = layui.laypage //分页
                , layer = layui.layer //弹层
                , table = layui.table //表格
                , carousel = layui.carousel //轮播
                , upload = layui.upload //上传
                , element = layui.element //元素操作
                , slider = layui.slider //滑块
                , form = layui.form //表单

            //显示
            table.render({
                elem: '#test'
                , url: 'http://localhost:53305/api/WST_Detial_Pro'
                , page: { //支持传入 laypage 组件的所有参数（某些参数除外，如：jump/elem） - 详见文档
                    layout: ['limit', 'count', 'prev', 'page', 'next', 'skip'] //自定义分页布局
                    //,curr: 5 //设定初始在第 5 页
                    , groups: 1 //只显示 1 个连续页码
                    , first: false //不显示首页
                    , last: false //不显示尾页
                    , limit: 5
                }
                , cols: [[
                    { field: 'did', width: 80, title: '编号', sort: true }
                    , { field: 'dtitle', width: 120, title: '名称', sort: true }
                    , { field: 'dptitle', width: 180, title: '父栏目', sort: true }
                    , { field: 'urlKey', width: 180, title: 'UrlKey', sort: true }
                    , { field: 'dsort', title: '排序', Width: 180, sort: true }
                    , {
                        field: 'dstate', width: 180, title: '状态', sort: true, templet: function (d) {
                            if (d.dstate == 0) {
                                return "显示";
                            }
                            else {
                                return "隐藏";
                            }
                        }
                    }
                    , { field: 'dtype', width: 180, title: '类型', sort: true }
                    , { field: 'daddress', width: 180, title: '地址', sort: true }
                    , { field: 'dexplain', width: 180, title: '说明', sort: true }
                    , { fixed: 'right', width: 165, align: 'center', toolbar: '#barDemo' }
                ]]

            });

            //监听行工具事件
            table.on('tool(test)', function (obj) { //注：tool 是工具条事件名，test 是 table 原始容器的属性 lay-filter="对应的值"
                var data = obj.data //获得当前行数据
                    , layEvent = obj.event; //获得 lay-event 对应的值
                if (layEvent === 'del') {
                    layer.confirm('真的删除行么', function (index) {
                        $.ajax({
                            url: 'http://localhost:53305/api/WST_Detial_Pro',
                            type: 'delete',
                            data: '"' + data.did + '"',
                            success: function (result) {
                                if (result > 0) {
                                    alert("删除成功！");
                                    //重新加载
                                    location.reload();

                                }
                                else {
                                    alert("删除失败！");
                                    location.reload();
                                }
                            },
                            dataType: "json",
                            contentType: "application/json"
                        })
                    });
                } else if (layEvent === 'edit') {
                    layer.open({
                        title: '修改栏目'
                        , content: $('#formadd')
                        , area: ['650px', '500px']
                        , closeBtn: 2
                        , shade: 0
                        , anim: 6
                        , resize: true
                        , type: 1
                        , success: function () {
                            $('#Did').val(data.did);
                            $('#Dtitle').val(data.dtitle);
                            $('#Dptitle').val(data.dptitle);
                            $('#Urlkey').val(data.urlKey);
                            $('#Dsort').val(data.dsort);

                            if (data.dstate == 1) {
                                $('#Dstate2').prop('checked', true);
                            }
                            else if (data.dstate == 0) {
                                $('#Dstate1').prop('checked', true);
                            }
                            $('#Dtype').val(data.dtype);
                            $('#Daddress').val(data.daddress);
                            $('#Dexplain').val(data.dexplain);
                            form.render();
                        }
                        , btn: ['修改', '关闭'] //可以无限个按钮
                        , btnAlign: 'c'
                        , yes: function (index, layero) {
                            $.ajax({
                                url: 'http://localhost:53305/api/WST_Detial_Pro',
                                type: 'put',
                                data: JSON.stringify({
                                    Did: $('#Did').val(),
                                    Dtitle: $('#Dtitle').val(),
                                    Dptitle: $('#Dptitle').val(),
                                    UrlKey: $('#Urlkey').val(),
                                    Dsort: $('#Dsort').val(),
                                    Dstate: $('#Dstate').prop('checked') == true ? 0 : 1,
                                    Dtype: $('#Dtype').val(),
                                    Daddress: $('#Daddress').val(),
                                    Dexplain: $('#Dexplain').val(),
                                }),
                                success: function (data) {
                                    if (data > 0) {
                                        layer.closeAll(); //疯狂模式，关闭所有层
                                        alert("修改成功！");
                                        location.reload();
                                    }
                                    else {
                                        alert("修改失败！");
                                    }
                                },
                                dataType: "json",
                                contentType: "application/json"
                            })
                        }
                    });

                };

            });

            //查询
            $('#Search').click(function () {
                //执行重载
                table.reload('test', {
                    where: { //设定异步数据接口的额外参数，任意设
                        dtitle: $('#demoReload').val(),
                        dptitle: $('#demoParent').val()
                    }
                    , page: {
                        curr: 1 //重新从第 1 页开始
                    }
                }); //只重载数据
            });

            //查询框重置
            $("#Reset").click(function () {
                $("#demoReload").val("");
                $("#demoParent").val("");
                form.render();
            });

            //新增
            $('#NewAdd').click(function (event) {
                //阻止第一次加载
                event.preventDefault();
                layer.open({
                    title: '栏目管理'
                    , content: $('#formadd')
                    , area: ['650px', '500px']
                    , closeBtn: 2
                    , shade: 0
                    , anim: 6
                    , resize: true
                    , type: 1
                    , success: function (index, layero) {
                        $('#formadd')[0].reset();
                        layui.form.render();
                    }
                    , btn: ['新增', '关闭'] //可以无限个按钮
                    , btnAlign: 'c'
                    , yes: function (index, layero) {
                        //按钮【按钮一】的回调
                        $.ajax({
                            url: 'http://localhost:53305/api/WST_Detial_Pro',
                            type: 'post',
                            data: JSON.stringify({
                                Dtitle: $('#Dtitle').val(),
                                Dptitle: $('#Dptitle').val(),
                                UrlKey: $('#Urlkey').val(),
                                Dsort: $('#Dsort').val(),
                                Dstate: $('#Dstate').prop('checked') == true ? 0 : 1,
                                Dtype: $('#Dtype').val(),
                                Daddress: $('#Daddress').val(),
                                Dexplain: $('#Dexplain').val(),
                            }),
                            success: function (data) {
                                if (data > 0) {
                                    layer.closeAll(); //疯狂模式，关闭所有层
                                    alert("添加成功！");
                                    location.reload();
                                    //渲染
                                    table.reload('demo1', {
                                        where: { //设定异步数据接口的额外参数，任意设
                                            Bunit: ""
                                        }
                                        , page: {
                                            curr: 1 //重新从第 1 页开始
                                        }
                                    });
                                }
                                else {
                                    alert("添加失败！");
                                }
                            },
                            dataType: "json",
                            contentType: "application/json"
                        })
                    }

                });
            });
        });
    </script>
</body>
</html>
