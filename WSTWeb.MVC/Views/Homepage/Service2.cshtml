
@{
    ViewData["Title"] = "Service2";
}



<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8">
    <title>Layui</title>
    <meta name="renderer" content="webkit">
    <meta http-equiv="X-UA-Compatible" content="IE=edge,chrome=1">
    <meta name="viewport" content="width=device-width, initial-scale=1, maximum-scale=1">
    <link href="~/layui/css/layui.css" rel="stylesheet" />
</head>
<body>
    <!--图片-->
    <div style="width:1920px;height:198px;background-color:bisque">
        <img src="~/images/服务与行业类型.png" />
    </div>
    <!--文字-->
    <div style="width:1920px;height:189px;">
        <div style="width:1920px;height:90px;position:relative;top:49.5px">
            <img src="~/images/斜线2.png" style="width:1920px;height:9px;position:relative;top:35px;" />
            <div style="width:290px;height:90px;background-color:white;position:relative;top:-16px;left:810px">
                <span style="padding: 20px 0;top:8px;left: 45px; border-bottom: 1px solid #10459A; border-bottom-width: 1px; border-bottom-style: solid; border-bottom-color: rgb(16, 69, 154); position: relative;font-size:48px">
                    <i style="position: absolute; width: 60px; height: 5px; background: #171458; background-image: initial; background-position-x: initial; background-position-y: initial; background-size: initial; background-attachment: initial; background-origin: initial; background-clip: initial; background-color: rgb(23, 20, 88); border-radius: 30px; border-top-left-radius: 30px; border-top-right-radius: 30px; border-bottom-right-radius: 30px; border-bottom-left-radius: 30px; bottom: -3px; left: 50%; transform: translateX(-50%);"></i>
                    行业/服务
                </span>
            </div>
        </div>
    </div>
    <!--左侧导航栏-->

    <div style="width:890px;height:666px;margin:0 auto; background-color:#ff0000">
        <div class="layui-side-scroll">
            <!-- 左侧导航区域（可配合layui已有的垂直导航） -->
            <ul class="layui-nav layui-nav-tree" lay-filter="test" id="fu">
        
            </ul>
        </div>
    </div>
    <script src="~/js/jquery-3.3.1.js"></script>
    <script>
        $(function () {
            $.ajax({
                url: 'http://localhost:53305/api/WST_Detial_Pro/GetTree?dptitle='+'服务类型',
                type: 'get',
                success: function (result) {
                    var str = '';
                    $(result.data).each(function () {
                        str += '<li class="layui-nav-item layui-nav-itemed" >' +'<a>'+ this.dtitle +'</a>'+ '</li>';
                    });
                    $('#fu').append(str);
                }
            })
        });
    </script>
</body>
</html>